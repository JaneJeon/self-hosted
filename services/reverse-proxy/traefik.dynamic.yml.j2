http:
  middlewares:
    gzip:
      compress: {}
    no-www: # stripping https://www.blah -> https://blah
      redirectRegex:
        regex: ^https://(?:www\.)?(.+)
        replacement: https://${1}
        permanent: true
    sso-proxy:
      forwardAuth:
        address: http://authelia:9091/api/verify?rd=https://auth.janejeon.com
        trustForwardHeader: true
        authResponseHeaders:
          - Remote-User
          - Remote-Groups
          - Remote-Name
          - Remote-Email
    cloudflare-whitelist:
      ipWhiteList:
        sourceRange: {{ cloudflare_ips | tojson }}
        # Allow connections only from CloudFlare:
        # https://doc.traefik.io/traefik/middlewares/http/ipwhitelist/#ipstrategydepth
        ipStrategy:
          depth: 1
